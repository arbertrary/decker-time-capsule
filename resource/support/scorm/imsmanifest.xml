<?xml version="1.0" standalone="no" ?>

<!-- 
    Must have a unique identifier for course and version number.
    can also include xmlns and tags for name space info -->
<manifest identifier="EXA-2019-08-10" version="1.0">
<!--     xmlns="http://www....."
         xmlns:adlcp="http://www...."
         xmlns:xsi="http://www...."
         xsi:schemaLocation="http://www.... imscp_rootv1p1p2.xsd
                             http://www.... imsmd_rootv1p2p1.xsd
                             http://www....adlcp_rootv1p2.xsd" -->

	<metadata>
		<schema>ADL SCORM</schema>
		<schemaversion>1.2</schemaversion>
    </metadata>

    <organizations default="SCORM_example_default_org">
        <organization identifier="SCORM_example_default_org">
            <title>Example SCORM tutorial</title>
            <!-- Each module in course should be listed as an item -->
            <!-- identifierref should be the resource indentifier -->
            <item identifier="example01" identifierref="index" isvisible="true">
                <!-- Below is the title of the learning module -->
                <title>Decker Example Content</title>
            </item>
        </organization>
    </organizations>

    <resources>
    <!-- SCO resource is a launchable resource - REQUIRED -->
    <!-- scormType can also be asset that is not launchable -->
        <resource identifier="index" type="webcontent" adlcp:scormType="sco" href="../public/index.html">
            <file href="../public/img/course.jpg"/>
            <file href="../public/img/distracting.jpg"/>
            <file href="../public/img/play.jpg"/>
            <file href="../public/introduction-deck.html"/>
            <file href="../public/introduction-handout.html"/>
            <!-- need to add all in support -->
        </resource>
    </resources>
</manifest>